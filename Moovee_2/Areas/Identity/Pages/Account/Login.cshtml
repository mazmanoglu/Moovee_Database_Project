<body>
	<div class="container">
		<div class="row">
			<div class="col-md-5 mx-auto">
				<div id="first">
					<div class="myform form ">
						<div class="logo mb-3">
							<div class="col-md-12 text-center">
								<h1>Login</h1>
							</div>
						</div>
						<form action="" method="post" name="login">
							<div class="form-group">
								<label for="exampleInputEmail1">@*Email address*@</label>
								<input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email">
							</div>


							<div class="form-group">
								<label for="exampleInputEmail1">@*Password*@</label>
								<input type="password" name="password" id="password" class="form-control" aria-describedby="emailHelp" placeholder="Enter Password">
							</div>


							<div class="form-group">
								<p class="text-center">By signing up you accept our <a href="https://en.wikipedia.org/wiki/Terms_of_service">Terms Of Use</a></p>
							</div>
							<div class="col-md-12 text-center ">
								<button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Login</button>
							</div>
							<div class="col-md-12 ">
								<div class="login-or">
									<hr class="hr-or">
									<span class="span-or">or</span>
								</div>
							</div>
@*							<div class="col-md-12 mb-3">
								<p class="text-center">
									<a href="https://accounts.google.com/o/oauth2/v2/auth/oauthchooseaccount?response_type=code&client_id=593737838514-5likt0fve90e2dat4ud1ptmdoifp17bu.apps.googleusercontent.com&redirect_uri=https%3A%2F%2Flocalhost%3A44364%2Fsignin-google&scope=openid%20profile%20email&state=CfDJ8GQS8MT9q-FDoMBZwftj-5HDGcmqNuogOuoJExEzX7WAj9XMlThqopxDieeL1Ih08L6ESGc-6E5BoXCZtPY7nIcPBr380dV5yGAZtCL7uIRdcx5k_J0TzOX6yqUZXp2-EbtUsD3ZF-wMCXs9b68Zf_l2RgrwtY4BY_lSU9qYdooBkPA7Qv61G0x1PY4EbLCVe828rDWTTPMk8nkQ50JZ3zBrfAmCHL3x03xa4IAtZlkZchqNuCuvZKueVSKDe1Ft4ANshspexpPGWVMsq8SIq4m9EuwRQhXw3vI8S0GSCFlL&flowName=GeneralOAuthFlow" class="google btn mybtn">
										<i class="fa fa-google-plus">
										</i> Signup using Google
									</a>
								</p>
							</div>*@
						</form>

						<form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
							<div class="col-md-12">
								<p class="text-center">
									@foreach (var provider in Model.ExternalLogins)
									{
										<button type="submit" class="btn btn-danger" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
											<i class="fa fa-google-plus"></i>  Signup using Google
										</button>
									}
								</p>
							</div>
						</form>

						<form action="" method="post" name="login">
							<div class="form-group">
								<p class="text-center">
									Don't have account?
									<a href="/Identity/Account/Register">Sign in here</a>
								</p>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>



	<script src="https://apis.google.com/js/platform.js" async defer></script>
</body>
