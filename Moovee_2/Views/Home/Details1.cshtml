@model Movie
@{
	ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
	.chip {
		display: inline-block;
		padding: 0 25px;
		height: 50px;
		font-size: 16px;
		line-height: 50px;
		border-radius: 50px;
		background-color: #f1f1f1;
	}

		.chip img {
			float: left;
			margin: 0 10px 0 -25px;
			height: 50px;
			/*width: 50px;*/
			border-radius: 50%;
		}
</style>


<div>
	<h4>Details of Movie</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			<img src="~/img/posters/@Html.DisplayFor(modelItem => modelItem.ImageUrl)" class="card-img" />
		</dt>
		<dd class="col-sm-10">
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Title)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Title)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Description)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Description)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Length)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Length) min.
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.DateRelease)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.DateRelease)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Genre)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Genre)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.MainActress)
		</dt>
		<dd class="col-sm-10">
			<div class="chip">
				<img src="~/img/avatar/@Html.DisplayFor(modelItem => modelItem.ActressImage)" alt="person" />
				@Html.DisplayFor(model => model.MainActress)
			</div>
		</dd>
	</dl>
</div>

<br />
<div>
	@*	<a asp-action="Edit" asp-route-id="@Model.MovieId" class="btn btn-success">Edit</a> *@
	<a asp-controller="Movie" asp-action="Index" class="btn btn-success">Back to Movie List</a>
	<a asp-action="Index" class="btn btn-success">Back to Main Menu</a>
	@*	<a asp-action="Delete" asp-route-id="@Model.MovieId" class="btn btn-danger">Delete</a>*@
</div>




